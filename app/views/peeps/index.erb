<!DOCTYPE html>

<html>
<body>
	<h1>Peeps</h1>

	<ul id='peeps'>
		<% @peeps.reverse_chronological_order.each do |peep| %>
			<li>
				<%= peep.user.firstname %> <%= peep.user.surname %> @<%= peep.user.username %>, <%= peep.time %>
				<br>
				<%= peep.text %>
			</li>
		<% end %>
	</ul>

</body>
</html>